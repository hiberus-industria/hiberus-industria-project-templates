{
    "$schema": "https://json.schemastore.org/template",
    "author": "Hiberus industria",
    "classifications": ["Aspire", "Web", "React", "API"],
    "name": "App template (React + ASP.NET Core)",
    "identity": "Hiberus.Industria.Templates.Aspire.React",
    "shortName": "aspire-react",
    "sourceName": "Templates.Aspire.React",
    "preferNameDirectory": true,
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sources": [
        {
            "source": "./",
            "exclude": ["**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**"]
        },
        {
            "source": "../../",
            "target": "./",
            "include": [
                ".editorconfig",
                ".gitattributes",
                ".gitignore",
                ".dockerignore",
                ".github/**",
                ".vscode/**"
            ]
        }
    ],
    "symbols": {
        "appSlug": {
            "type": "derived",
            "valueSource": "name",
            "valueTransform": "kebabCase",
            "replaces": "templates-aspire-react",
            "fileRename": "templates-aspire-react",
            "description": "Project name in kebab-case for use in external services."
        },
        "appDisplayName": {
            "type": "derived",
            "valueSource": "name",
            "valueTransform": "displayName",
            "replaces": "Templates Aspire React",
            "description": "Project name in PascalCase for use in external services."
        }
    },
    "forms": {
        "dotToSpace": {
            "identifier": "replace",
            "pattern": "\\.",
            "replacement": " "
        },
        "dashToSpace": {
            "identifier": "replace",
            "pattern": "-",
            "replacement": " "
        },
        "camelToSpace": {
            "identifier": "replace",
            "pattern": "(?<=[a-z0-9])([A-Z])",
            "replacement": " $1"
        },
        "displayName": {
            "identifier": "chain",
            "steps": ["dotToSpace", "dashToSpace", "camelToSpace", "titleCase"]
        }
    }
}
